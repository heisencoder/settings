# Matt's customizations to key bindings
#bindsym Mod1+Control+l exec "cinnamon-screensaver-command --lock"
bindsym $mod+Control+semicolon exec "i3lock -c 000000"

bindsym $mod+Control+h resize shrink width 100 px or 10 ppt
bindsym $mod+Control+j resize grow height 160 px or 16 ppt
bindsym $mod+Control+k resize shrink height 160 px or 16 ppt
bindsym $mod+Control+l resize grow width 100 px or 10 ppt

# Commands to adjust which monitor is active.  This is only good for laptop
bindsym $mod+comma exec "xrandr --output eDP1 --off --output DP1 --auto"
bindsym $mod+Control+comma exec "xrandr --output eDP1 --auto --output DP1 --mode 1920x1080"
bindsym $mod+period exec "xrandr --output eDP1 --auto --output DP1 --off"
# bindsym $mod+slash exec "xrandr --output LVDS1 --auto --right-of HDMI3"
# This will automatically activate all monitors
bindsym $mod+slash exec "xrandr --auto"

# Hotkeys to autofocus a particular window type
bindsym $mod+u [instance="oogle-chrome$"] focus
bindsym $mod+i [class="^Terminator$"] focus
# Disable by default
bindsym $mod+o [class="^jetbrains-idea-ce$"] focus
# Secure Shell Chrome App
#bindsym $mod+o [instance="crx_pnhechapfaindjhompbnflcldabbghjo"] focus
# Hangouts:
bindsym $mod+p [instance="crx_knipolnnllmklapflnccelgolnpehhpl"] focus
# Cider:
bindsym $mod+y [instance="crx_ngonkpkdjoolhafdighbcajopenkobdn"] focus

# Don't focus new windows or allow current windows to steal focus.
#no_focus [class="."]
# Don't let Hangouts window steal focus or be floating
no_focus [instance="crx_knipolnnllmklapflnccelgolnpehhpl"]
for_window [instance="crx_knipolnnllmklapflnccelgolnpehhpl"] floating disable
#focus_on_window_activation urgent
focus_on_window_activation none

# Hide window borders on edge of screen.
hide_edge_borders both

# Show marks on the right side of the window decoration.
show_marks yes

# RedShift
bindsym $mod+n exec "redshift -O 6500k"
bindsym $mod+m exec "redshift -O 3500k"

# Multimedia Keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% && killall -SIGUSR1 i3status
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% && killall -SIGUSR1 i3status
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle && killall -SIGUSR1 i3status
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle && killall -SIGUSR1 i3status
# These require sudo apt-get install xbacklight
bindsym XF86MonBrightnessDown exec --no-startup-id /usr/bin/xbacklight -dec 20
bindsym XF86MonBrightnessUp exec --no-startup-id /usr/bin/xbacklight -inc 20

#-------------------------------------------------------------------------
# Remove titles from Chrome windows
# Hint: Use xprop command to find class name for a window.
for_window [class="oogle-chrome$"] border pixel 0
for_window [class="hromium-browser$"] border pixel 0
for_window [] border pixel 0

# Lock the screen after several minutes of being idle:
exec xautolock -detectsleep -time 20 -locker "i3lock -c 000000" -notify 30 -notifier "notify-send -u critical -t 10000 -- 'LOCKING screen in 30 seconds'"

# Enable compton, a compositing windows manager.  This requires having compton
# installed (sudo apt-get install compton)
# See http://unix.stackexchange.com/questions/136932/why-am-i-having-ghosting-and-tearing-with-the-i3-window-manager-paired-with-xcom
exec --no-startup-id compton -CGb --backend glx --vsync opengl --inactive-dim 0.05

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        # tray_output primary
}

# Run the gnome sounds applet for volume control
# This is part of the gnome-control-center package
exec --no-startup-id /usr/bin/gnome-sound-applet

# Run the NetworkManager
exec --no-startup-id nm-applet

# Initial layout
exec --no-startup-id "i3-msg 'workspace 7; append_layout ~/settings/i3/workspace-7.json'"
exec --no-startup-id "i3-msg 'workspace 9; append_layout ~/settings/i3/workspace-9.json'"
